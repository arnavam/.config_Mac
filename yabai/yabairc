
#!/usr/bin/env sh

#
# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition
#
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

#bsp , float , managed , stack

# global settings
yabai -m config                                 \
    external_bar                 off:40:0       \
    menubar_opacity              1.0            \
    mouse_follows_focus          off             \
    focus_follows_mouse          on             \
    display_arrangement_order    default        \
    window_origin_display        default        \
    window_placement             second_child   \
    window_insertion_point       focused        \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0            \
    window_animation_easing      ease_out_circ  \
    window_opacity_duration      0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.9            \
    window_opacity               on            \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  12             \
    bottom_padding               3             \
    left_padding                 3             \
    right_padding                2             \
    window_gap                   06             \
    layout                       bsp            \
    mouse_modifier               alt             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            stack

echo "yabai configuration loaded.."

# Disable specific apps

yabai -m rule --add app="^Preview$"           size=200:250 pos=900:100 float=on

yabai -m rule --add app="^System Settings$"   size=200:250 pos=900:100 float=on

yabai -m rule --add app="^Notes$"   size=300:250 pos=100:100 float=on

yabai -m rule --add app="^Calculator$"        size=200:250 pos=900:100 float=on
yabai -m rule --add app="^Karabiner-Element$" size=200:250 pos=900:100 float=on
yabai -m rule --add app="^App Store$"         size=200:250 pos=900:100 float=on
yabai -m rule --add app="^Calendar$"          size=200:250 pos=900:100 float=on
yabai -m rule --add app="^DBeaver$"           size=200:250 pos=900:100 float=on
yabai -m rule --add app="^Discord$"           size=200:250 pos=900:100 float=on
yabai -m rule --add app="^Finder$"           manage=off
yabai -m rule --add app="^PDFgear$"           size=200:250 float=on
yabai -m rule --add app="^TextEdit$"          size=200:250 pos=900:100 float=on
yabai -m rule --add app="^Terminal$"          size=200:250 pos=900:100 float=on


yabai -m rule --add app="^Arc$" title="^[arnav|General|Profiles|Max|Links|Shortcuts|Icon|Advanced]$" manage=off
yabai -m rule --add app="^Arc$" title="^Space.*$" manage=off layer=below
yabai -m rule --add app="^Arc$" title="^$" manage=off layer=below


yabai -m signal --add event=window_focused action="sketchybar --trigger window_focus"
yabai -m signal --add event=window_created action="sketchybar --trigger windows_on_spaces"
yabai -m signal --add event=window_destroyed action="sketchybar --trigger windows_on_spaces"


yabai -m space 1 --label web
yabai -m space 2 --label code
yabai -m space 3 --label term
yabai -m space 4 --label docs
yabai -m space 5 --label social
yabai -m rule --add app="^Safari$" space=^1
yabai -m rule --add app="^Zen$" space=^1
yabai -m rule --add app="^kitty$" space=^3
yabai -m rule --add app="^Code$" space=code border=off
